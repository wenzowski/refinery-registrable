<ul>
  <% if ::Refinery::Enrollment::Admin::UserFieldsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.registrable_admin_user_fields_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_registrable_admin_user_field_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Enrollment::Admin::UserFieldsController.sortable? && ::Refinery::Enrollment::Field.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Fields"),
                 refinery.registrable_admin_user_fields_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Fields"),
                 refinery.registrable_admin_user_fields_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
