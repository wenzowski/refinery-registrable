<%= form_for [refinery, :registrable_admin, @user_field.becomes(Refinery::Registrable::UserField)] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @user_field,
              :include_object_name => true %>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>
  </div>

  <div class='field'>
    <%= f.label :type -%>
    <%= f.select :type, options_for_select(
      Refinery::Registrable::UserField.descendants.collect{ |t|
        [t.to_s.split('::').last, t.to_s.underscore]
      }
    ) -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :hide_delete => true,
             :delete_title => t('delete', :scope => 'refinery.fields.admin.fields.field'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @user_field.name) %>
<% end -%>
