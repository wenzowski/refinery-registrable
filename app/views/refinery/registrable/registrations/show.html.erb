<% content_for :header, t('your_profile', :scope => 'refinery.registrable.users.titles') %>

<%= form_for :user, :url => refinery.registrable_registrations_path do |f| -%>

  <%= render '/refinery/admin/error_messages', :object => @user, :include_object_name => true %>

  <div class='field'>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'larger widest', :disabled => true %>
  </div>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'larger widest', :disabled => true %>
  </div>

  <%= f.fields_for :user_attributes do |f| %>
    <% @user.fields.each do |field| %>
      <div class='field'>
        <%= f.label field.name %>
        <%= f.text_field field.name, :class => 'larger widest', :disabled => true %>
      </div>
    <% end %>
  <% end %>


<% end -%>

<div class="form-actions" style="border-top-left-radius: 5px; border-top-right-radius: 5px; border-bottom-left-radius: 5px; border-bottom-right-radius: 5px; ">
  <div class="form-actions-left">
    <!-- <input class="wymupdate button" id="submit_button" type="submit" value="Sign up"> -->
    <%= link_to t('edit', :scope => 'refinery.registrable.users.actions'), refinery.edit_registrable_registration_path(@user), :class => 'wymupdate button' %>
  </div>
  <div class="form-actions-right">
    <%= link_to t('logout', :scope => 'refinery.registrable.users.actions'), refinery.destroy_refinery_user_session_path, :class => 'wymupdate button' %>
  </div>
</div>